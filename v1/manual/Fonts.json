{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://jamplus.com/schemas/Fonts.json",
  "title": "Font System Schema",
  "$ref": "#/$defs/DesignerFont",
  "$defs": {
    "DesignerFont": {
      "$id": "DesignerFont",
      "title": "Designer Font",
      "description": "A font definition for injection into the designer.",
      "type": "object",
      "properties": {
        "uuid": {
          "type": "string",
          "format": "uuid",
          "description": "A unique UUID identifier for the font."
        },
        "name": {
          "type": "string",
          "description": "The name of the font."
        }
      },
      "required": ["uuid", "name"],
      "additionalProperties": false
    }
  }
}
